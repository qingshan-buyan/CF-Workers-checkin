let domainList = [];
let userList = [];
let passList = [];
let ç­¾åˆ°ç»“æœ = "";
let BotToken = '';
let ChatID = '';

export default {
  // HTTP è¯·æ±‚å¤„ç†å‡½æ•°ä¿æŒä¸å˜
  async fetch(request, env, ctx) {
    await initializeVariables(env);
    const url = new URL(request.url);
    if (url.pathname == "/tg") {
      await sendMessage();
    } else if (url.pathname == `/${pass}`) {
      await checkin();
    }
    return new Response(ç­¾åˆ°ç»“æœ, {
      status: 200,
      headers: { 'Content-Type': 'text/plain;charset=UTF-8' }
    });
  },

  // å®šæ—¶ä»»åŠ¡å¤„ç†å‡½æ•°
  async scheduled(controller, env, ctx) {
    console.log('Cron job started');
    try {
      await initializeVariables(env);
      await checkin();
      console.log('Cron job completed successfully');
    } catch (error) {
      console.error('Cron job failed:', error);
      ç­¾åˆ°ç»“æœ = `å®šæ—¶ä»»åŠ¡æ‰§è¡Œå¤±è´¥: ${error.message}`;
      await sendMessage(ç­¾åˆ°ç»“æœ);
    }
  },
};

async function initializeVariables(env) {
  // è¯»å–å¹¶è§£æç¯å¢ƒå˜é‡ä¸­çš„å¤šä¸ªè´¦å·ã€å¯†ç å’ŒåŸŸå
  domainList = (env.JC || "").split(",").map(item => item.trim());
  userList = (env.ZH || "").split(",").map(item => item.trim());
  passList = (env.MM || "").split(",").map(item => item.trim());

  if (domainList.length !== userList.length || domainList.length !== passList.length) {
    ç­¾åˆ°ç»“æœ = "åŸŸåã€è´¦å·å’Œå¯†ç çš„æ•°é‡ä¸ä¸€è‡´ï¼Œè¯·æ£€æŸ¥é…ç½®ã€‚";
    console.error(ç­¾åˆ°ç»“æœ);
    return;
  }

  // åˆå§‹åŒ– BotToken å’Œ ChatIDï¼ˆå¯é€‰ï¼‰
  BotToken = env.TGTOKEN || BotToken;
  ChatID = env.TGID || ChatID;

  // æ‰“å°è°ƒè¯•ä¿¡æ¯
  ç­¾åˆ°ç»“æœ = `é…ç½®çš„è´¦æˆ·ä¿¡æ¯:\n`;
  domainList.forEach((domain, index) => {
    ç­¾åˆ°ç»“æœ += `è´¦å· ${index + 1}: ${domain} - ${userList[index]}\n`;
  });
  console.log("å·²åŠ è½½çš„è´¦æˆ·ä¿¡æ¯:", ç­¾åˆ°ç»“æœ);
}

async function sendMessage(msg = "") {
  const è´¦å·ä¿¡æ¯ = `è´¦æˆ·ä¿¡æ¯: \n${domainList.map((domain, index) => `åœ°å€: ${domain}\nè´¦å·: ${userList[index]}\nå¯†ç : <tg-spoiler>${passList[index]}</tg-spoiler>`).join("\n\n")}`;
  const now = new Date();
  const beijingTime = new Date(now.getTime() + 8 * 60 * 60 * 1000);
  const formattedTime = beijingTime.toISOString().slice(0, 19).replace('T', ' ');

  console.log(msg);
  if (BotToken !== '' && ChatID !== '') {
    const url = `https://api.telegram.org/bot${BotToken}/sendMessage?chat_id=${ChatID}&parse_mode=HTML&text=${encodeURIComponent("æ‰§è¡Œæ—¶é—´: " + formattedTime + "\n" + è´¦å·ä¿¡æ¯ + "\n\n" + msg)}`;
    return fetch(url, {
      method: 'get',
      headers: {
        'Accept': 'text/html,application/xhtml+xml,application/xml;',
        'Accept-Encoding': 'gzip, deflate, br',
        'User-Agent': 'Mozilla/5.0 Chrome/90.0.4430.72',
      }
    });
  }
}

async function checkin() {
  try {
    if (domainList.length === 0 || userList.length === 0 || passList.length === 0) {
      throw new Error('å¿…éœ€çš„é…ç½®å‚æ•°ç¼ºå¤±');
    }

    for (let i = 0; i < domainList.length; i++) {
      const domain = domainList[i];
      const user = userList[i];
      const pass = passList[i];

      // ç™»å½•è¯·æ±‚
      const loginResponse = await fetch(`${domain}/auth/login`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'User-Agent': 'Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/129.0.0.0 Safari/537.36',
          'Accept': 'application/json, text/plain, */*',
          'Origin': domain,
          'Referer': `${domain}/auth/login`,
        },
        body: JSON.stringify({
          email: user,
          passwd: pass,
          remember_me: 'on',
          code: "",
        }),
      });

      console.log(`è´¦å· ${i + 1} - ç™»å½•è¯·æ±‚çŠ¶æ€:`, loginResponse.status);

      if (!loginResponse.ok) {
        const errorText = await loginResponse.text();
        throw new Error(`è´¦å· ${i + 1} ç™»å½•è¯·æ±‚å¤±è´¥: ${errorText}`);
      }

      const loginJson = await loginResponse.json();
      console.log(`è´¦å· ${i + 1} - ç™»å½•å“åº”:`, loginJson);

      if (loginJson.ret !== 1) {
        throw new Error(`è´¦å· ${i + 1} ç™»å½•å¤±è´¥: ${loginJson.msg || 'æœªçŸ¥é”™è¯¯'}`);
      }

      // è·å– Cookie
      const cookieHeader = loginResponse.headers.get('set-cookie');
      if (!cookieHeader) {
        throw new Error(`è´¦å· ${i + 1} ç™»å½•æˆåŠŸä½†æœªæ”¶åˆ°Cookie`);
      }

      console.log(`è´¦å· ${i + 1} - æ”¶åˆ°Cookie:`, cookieHeader);
      const cookies = cookieHeader.split(',').map(cookie => cookie.split(';')[0]).join('; ');

      // ç­‰å¾…ç¡®ä¿ç™»å½•çŠ¶æ€
      await new Promise(resolve => setTimeout(resolve, 1000));

      // ç­¾åˆ°è¯·æ±‚
      const checkinResponse = await fetch(`${domain}/user/checkin`, {
        method: 'POST',
        headers: {
          'Cookie': cookies,
          'User-Agent': 'Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/129.0.0.0 Safari/537.36',
          'Accept': 'application/json, text/plain, */*',
          'Content-Type': 'application/json',
          'Origin': domain,
          'Referer': `${domain}/user/panel`,
          'X-Requested-With': 'XMLHttpRequest'
        },
      });

      console.log(`è´¦å· ${i + 1} - ç­¾åˆ°è¯·æ±‚çŠ¶æ€:`, checkinResponse.status);

      const responseText = await checkinResponse.text();
      console.log(`è´¦å· ${i + 1} - ç­¾åˆ°å“åº”:`, responseText);

      try {
        const checkinResult = JSON.parse(responseText);
        console.log(`è´¦å· ${i + 1} - ç­¾åˆ°ç»“æœ:`, checkinResult);

        if (checkinResult.ret === 1 || checkinResult.ret === 0) {
          ç­¾åˆ°ç»“æœ += `ğŸ‰ è´¦å· ${i + 1} ç­¾åˆ°ç»“æœ ğŸ‰\n ${checkinResult.msg || (checkinResult.ret === 1 ? 'ç­¾åˆ°æˆåŠŸ' : 'ç­¾åˆ°å¤±è´¥')}\n`;
        } else {
          ç­¾åˆ°ç»“æœ += `ğŸ‰ è´¦å· ${i + 1} ç­¾åˆ°ç»“æœ ğŸ‰\n ${checkinResult.msg || 'ç­¾åˆ°ç»“æœæœªçŸ¥'}\n`;
        }
      } catch (e) {
        if (responseText.includes('ç™»å½•')) {
          throw new Error(`è´¦å· ${i + 1} ç™»å½•çŠ¶æ€æ— æ•ˆï¼Œè¯·æ£€æŸ¥Cookieå¤„ç†`);
        }
        throw new Error(`è´¦å· ${i + 1} è§£æç­¾åˆ°å“åº”å¤±è´¥: ${e.message}\n\nåŸå§‹å“åº”: ${responseText}`);
      }
    }

    await sendMessage(ç­¾åˆ°ç»“æœ);
    return ç­¾åˆ°ç»“æœ;

  } catch (error) {
    console.error('Checkin Error:', error);
    ç­¾åˆ°ç»“æœ = `ç­¾åˆ°è¿‡ç¨‹å‘ç”Ÿé”™è¯¯: ${error.message}`;
    await sendMessage(ç­¾åˆ°ç»“æœ);
    return ç­¾åˆ°ç»“æœ;
  }
}
